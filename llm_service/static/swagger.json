{
  "openapi": "3.0.0",
  "info": {
    "title": "Translation API",
    "version": "1.0.0",
    "description": "API for text and audio translation."
  },
  "paths": {
    "/api/v1/translate": {
      "post": {
        "summary": "Translate text to Twi",
        "operationId": "translateText",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Hello, how are you?"
                  }
                },
                "required": [
                  "text"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Translation successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "translated_text": {
                      "type": "string",
                      "example": "Akwabaa, wo ho te sεn?"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Missing fields"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/chat": {
      "post": {
        "summary": "Send a message for translation and LLM response",
        "operationId": "promptInTwi",
        "description": "Submit a prompt in Twi and get your response back in Twi.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Kyerɛkyerɛ hia a kasa a wɔde di dwuma ntɛmntɛm ho nhwɛso ho hia mu"
                  }
                },
                "required": [
                  "message"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Prompt successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "response": {
                      "type": "string",
                      "example": "example response"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/chat/voice": {
      "post": {
        "summary": "Send an audio message for translation and LLM response",
        "operationId": "audioPromptInTwi",
        "description": "Send a voice prompt in Twi and get your response as a voice note.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "audio_message": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "audio_message"
                ]
              },
              "encoding": {
                "audio_message": {
                  "contentType": [
                    "audio/mpeg",
                    "audio/wav"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Voice prompt sent successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "msg_id": {
                      "type": "string",
                      "example": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Fetch the audio response for the prompt",
        "operationId": "audioResponseInTwi",
        "description": "Receive audio response.",
        "parameters": [
          {"msg_id": "Pass message id"}
        ],
        "responses": {
          "200": {
            "description": "Voice response received",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "msg_id": {
                      "type": "string",
                      "example": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }    
  }
}